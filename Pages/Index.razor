                        </MImage>
                    </MListItemAvatar>

                    <MListItemContent>
                        <MListItemTitle>@chat.title</MListItemTitle>
                    </MListItemContent>
                </MListItem>
        }
    </MList>
    <MDivider></MDivider>
</MCard>

