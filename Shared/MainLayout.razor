@inherits LayoutComponentBase
@using BlazorComponent.I18n
@inject I18n I18n

<MApp>
    <MAppBar App>
        <MAppBarNavIcon @onclick="() => _drawer = !_drawer"></MAppBarNavIcon>
        <MToolbarTitle>LiberalChat desktop</MToolbarTitle>
        <MSpacer></MSpacer>
        <MButton Text Color="primary" Target="_blank" Href="https://github.com/LibertyChat">About</MButton>
    </MAppBar>

    <MNavigationDrawer App @bind-Value="_drawer">
        <MList Nav Routable>
            <MListItem Href="/" ActiveClass="primary--text">
                <MListItemIcon>
                    <MIcon>mdi-message</MIcon>
                </MListItemIcon>
                <MListItemContent>
                    <MListItemTitle>信息</MListItemTitle>
                </MListItemContent>
            </MListItem>
            <MListItem Href="/bookmark" ActiveClass="primary--text">
                <MListItemIcon>
                    <MIcon>mdi-bookmark</MIcon>
                </MListItemIcon>
                <MListItemContent>
                    <MListItemTitle>收藏</MListItemTitle>
                </MListItemContent>
            </MListItem>
            <MListItem Href="/manage_private_servers" ActiveClass="primary--text">
                <MListItemIcon>
                    <MIcon>mdi-server</MIcon>
                </MListItemIcon>
                <MListItemContent>
                    <MListItemTitle>管理私有服务器</MListItemTitle>
                </MListItemContent>
            </MListItem>
            <MListItem Href="/manage_friends_or_groups" ActiveClass="primary--text">
                <MListItemIcon>
                    <MIcon>mdi-account-multiple</MIcon>
                </MListItemIcon>
                <MListItemContent>
                    <MListItemTitle>管理好友/群聊</MListItemTitle>
                </MListItemContent>
            </MListItem>
            <MListItem Href="/setting" ActiveClass="primary--text">
                <MListItemIcon>
                    <MIcon>mdi-cog</MIcon>
                </MListItemIcon>
                <MListItemContent>
                    <MListItemTitle>设置</MListItemTitle>
                </MListItemContent>
            </MListItem>
        </MList>
    </MNavigationDrawer>

    <MMain>
        <MContainer Fluid>
            <MErrorHandler>
                @Body
            </MErrorHandler>
        </MContainer>
    </MMain>
</MApp>

@code {

    private bool _drawer;

}
